{% extends 'base.html.twig' %}

{% block title %}
	Mes adresses - Golden Fingers
{% endblock %}

{% block content %}
	<div id="main-show-adress">
		<a href="{{ path('account_address_add') }}" class="btn btn-warning btn-sm float-right">Ajouter une adresse</a>
		<h1>Mes adresses</h1>
		<p>C'est ici que vous allez pouvoir gerer vos adresse</p>
		<hr>
		{% if app.user.addresses|length == 0 %}
			<p class="text-center">Vous n'avez pas encore ajoutÃ© d'adresse dans votre compte client.Pour ajouter une, veuillez
				<a href="{{ path('account_address_add') }}">cliquez ici.</a>
			</p>
		{% else %}
			<div class="row">
				{% for address in app.user.addresses %}
					<div class="col-md-4 m-2">
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{ address.name }}</h5>
								<p class="card-text">
									{{ address.address }},<br>
									{{ address.postal }}-{{ address.city }}-{{ address.country }},<br>
									{{ address.address }},<br>

								</p>
								<a href="{{ path('account_address_edit', {'id' : address.id}) }}" class="">Modifier</a>
								|
								<a id="sup-address" href="{{ path('account_address_delete', {'id' : address.id}) }}" class="">Supprimer</a>

							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
		<div class=" d-flex justify-content-end">
			<a class="btn btn-warning btn-sm m-3" href="{{ path('account') }}">retour</a>
		</div>
	</div>
{% endblock %}
